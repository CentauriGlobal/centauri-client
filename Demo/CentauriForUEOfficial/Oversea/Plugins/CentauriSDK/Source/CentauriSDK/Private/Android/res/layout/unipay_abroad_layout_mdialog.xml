<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--头部1：title+subtitle，需要时加载-->
        <LinearLayout
            android:id="@+id/unipay_head_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#ff9933"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/unipay_head_test_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="测试标题"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/unipay_head_test_subTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="测试子标题"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </LinearLayout>


        <!--头部2：image+title-->
        <LinearLayout
            android:id="@+id/unipay_head_release"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/unipay_head_release_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:contentDescription="@string/unipay_abroad_iconsuc"
                android:src="@drawable/unipay_abroad_iconwarn" />

            <TextView
                android:id="@+id/unipay_head_release_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/unipay_sure"
                android:textColor="@color/unipay_abroad_em1"
                android:textSize="15sp" />
        </LinearLayout>


        <!--弹框内容-->
        <TextView
            android:id="@+id/unipay_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:text="@string/unipay_sure"
            android:textColor="@color/unipay_abroad_em1"
            android:textSize="15sp" />

        <Button
            android:id="@+id/unipay_dialog_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/unipay_abroad_drawable_embtn"
            android:focusable="true"
            android:text="@string/unipay_sure"
            android:textColor="@color/unipay_abroad_thin1"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>